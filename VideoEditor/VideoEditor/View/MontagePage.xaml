                    VerticalOptions="StartAndExpand"
                    FontSize="Micro"
                    TextColor="White"/>
                <Label 
                    Text="{Binding Logger.LogText}"
                    VerticalOptions="StartAndExpand"
                    FontSize="Micro"
                    x:Name="ScrollViewLabel"
                    BackgroundColor="Black"
                    TextColor="White"/>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>